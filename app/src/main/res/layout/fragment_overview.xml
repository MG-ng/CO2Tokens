<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment"
    >

    <TextView
        android:id="@+id/balance_overview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="You've got"
         />

    <TextView
        android:id="@+id/balance_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/balance_overview_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Balance"
        />

    <ScrollView
        android:id="@+id/scroll_txs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/balance_overview"
        >

        <TextView
            android:id="@+id/txs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="{ Txs data }" />

    </ScrollView>

</RelativeLayout>